---
import Social from './Social.astro';
---

<footer>
  <div class="footer-content">
    <Social platform="github" username="BenjaminFisher1"></Social>
  </div>
</footer>

<style>
  footer {
    width: 100%;
    margin-top: auto;
    padding: 2rem 0;
    background: rgba(13, 15, 18, 0.7);
    border-top: 1px solid #2a2d33;
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.02);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    gap: 1rem;
    justify-content: center;
  }
</style>