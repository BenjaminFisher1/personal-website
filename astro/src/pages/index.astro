---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';

const pageTitle = 'Home';
const pageDescription = 'landing';
---

<Layout title={pageTitle} description={pageDescription}>
  <main>
    <section class="hero">
      <h1>{pageTitle}</h1>
      <p>Hello world :)</p>
    </section>
  </main>
</Layout>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero {
    text-align: center;
    padding: 4rem 0;
    border: 1px solid #2a2d33;
    border-radius: 0;
    background: rgba(18, 20, 24, 0.5);
    box-shadow: 
      inset 0 0 50px rgba(0, 0, 0, 0.8),
      0 2px 0 rgba(61, 46, 35, 0.3);
    position: relative;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 3px,
        rgba(61, 46, 35, 0.05) 3px,
        rgba(61, 46, 35, 0.05) 6px
      );
    pointer-events: none;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: #4a4d52;
    text-shadow: 
      1px 1px 2px rgba(0, 0, 0, 0.9);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-weight: 900;
  }

  p {
    color: #6b6d71;
    font-size: 1.1rem;
    letter-spacing: 0.05em;
  }
</style>